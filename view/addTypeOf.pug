extends base

block content
  if user
    .form.form--table
      .row.align-content-center
        .col-md.d-flex.justify-content-center.form--el__addtypeOf
          form.form.form__add--typeOf.form-group.m-3.px-3.mt-5.b-2.border.border-danger(action='')
            h2.text-center.form-text
              | New type of product*: you must need a Name* of a product type.
            .typeOf--info
              label.mb-0.m-1.form-label.text-wrap(for='typeOfname') Name of product type*:
              input#typeOfname.form-control.m-1(type='text' required='')
            button#addtypeOf.m-3.btn.btn-info Save
